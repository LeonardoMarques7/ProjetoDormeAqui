name: Create PR to Main

on:
  repository_dispatch:
    types: [create-pr-main]

permissions:
  contents: write
  pull-requests: write

jobs:
  create_pr_main:
    runs-on: ubuntu-latest

    steps:
      - name: Criar Pull Request para main
        uses: actions/github-script@v7
        with:
          github-token: ${{ secrets.GH_PAT }}
          script: |
            const branchName = context.payload.client_payload.branch_name;

            const { data: pr } = await github.rest.pulls.create({
              owner: context.repo.owner,
              repo: context.repo.repo,
              head: branchName,
              base: "main",
              title: `Finalização: Merge para main - ${branchName}`,
              body: "Pull Request criado automaticamente ao concluir a revisão."
            });

            console.log("PR criado:", pr.html_url);
